<%= render 'layouts/header' %>

<div class="body">
  <div class="wrapper">
    <div class="heading">
      <h2>Explore</h2>
    </div>
    <div class="gallery">
      <% @pictures.each do |picture|  %>
        <div class="gallery__item">
          <% if picture.image.attached? %>
            <a href="<%= picture_url(picture) %>"><image class="gallery__img" src="<%= (url_for(picture.image)) %>"></a><br>
          <% end %>

          Likes: <%= picture.likes.count %>

          <% if logged_in? %>(
            <% if likes?(picture) %>
              <%= link_to "Unlike", [picture, current_user_like(picture)], method: :delete %>
            <% else %>
              <%= link_to "Like", picture_likes_path(picture), method: :post %>
            <% end %>
          )<% end %>

          <div>
            Comments: <%= picture.comments.count %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
